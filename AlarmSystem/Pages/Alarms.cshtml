@page
@model AlarmsModel
@{
    ViewData["Title"] = "Alarms";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-nowrap">Alarm Id</th>
            <th class="text-nowrap">Type</th>
            <th class="text-nowrap">Description</th>
            <th class="text-nowrap">Time Stamp</th>
            <th class="text-nowrap">Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alarm in Model.alarms)
        {
                @if(@alarm.AlarmLevel == "Warning")
                {
                <tr class="table-warning">
                    <td>@alarm.AlarmId</td>
                    <td class="text-nowrap">@alarm.AlarmName</td>
                    <td class="text-nowrap">@alarm.AlarmDescription</td>
                    <td>@alarm.TimeStamp</td>
                    <td>@alarm.Value</td>
                    <td><a href="./AcknowledgeAlarm?alarmid=@alarm.AlarmId" class="btn btn-info" role="button">Acknowledge</a>        
                    </td>
                </tr>
                }
                else if(@alarm.AlarmLevel == "Alarm")
                {
                <tr class="table-danger">
                    <td>@alarm.AlarmId</td>
                    <td class="text-nowrap">@alarm.AlarmName</td>
                    <td class="text-nowrap">@alarm.AlarmDescription</td>
                    <td>@alarm.TimeStamp</td>
                    <td>@alarm.Value</td>
                    <td><a href="./AcknowledgeAlarm?alarmid=@alarm.AlarmId" class="btn btn-info" role="button">Acknowledge</a></td>
                </tr>   
                }
                else
                {
                <tr class="table-info">
                    <td>@alarm.AlarmId</td>
                    <td class="text-nowrap">@alarm.AlarmName</td>
                    <td class="text-nowrap">@alarm.AlarmDescription</td>
                    <td>@alarm.TimeStamp</td>
                    <td>@alarm.Value</td>
                    <td><a href="./AcknowledgeAlarm?alarmid=@alarm.AlarmId" class="btn btn-info" role="button">Acknowledge</a></td>
                </tr>   
                }
        }
    </tbody>
</table>

</div>

